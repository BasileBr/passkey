<div class="row">
	<div class="col-md-12">
		<!-- BEGIN SAMPLE TABLE PORTLET-->
		<div class="portlet box blue">
			<div class="portlet-title">
				<div class="caption">
					<i class="icon-key"></i> Liste des portes  </div>
				<div class="tools">
					<a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
				</div>
			</div>
			<div class="portlet-body">
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
						<thead>
						<tr>
							<th> #id </th>
							<th> Door name </th>
							<th> Door building </th>
							<th> Door floor </th>
							<th> #actions </th>
						</tr>
						</thead>
						<tbody>
						{% for door in doors %}
							<tr id="{{ door.id }}">
								<td> {{ door.id }} </td>
								<td> {{ door.name }} </td>
								<td> {{ door.building }} </td>
								<td> {{ door.floor }} </td>
								<td>
									<form action="./?action=updateDoor" method="post">
										<input type="hidden" name="update" value="{{ door.id }}"/>
										<button type="submit" class="btn blue btn-sm">Modifier</button>
									</form>

									<!--<form action="" method="post">-->
									<input type="hidden" name="delete" value="{{ door.id }}"/>
									<button type="submit" class="btn red btn-sm btn-delete-d" value="{{ door.id }}">Supprimer</button>
									<!--</form>-->
								</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<!-- END SAMPLE TABLE PORTLET-->
	</div>
</div>
