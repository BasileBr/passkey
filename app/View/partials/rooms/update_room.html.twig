<div class="row">
	<div class="col-md-12">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet light bordered">
			<div class="portlet-title">
				<div class="caption font-green-haze">
					<i class="fa fa-cube font-green-haze"></i>
					<span class="caption-subject bold uppercase">Modifier une salle</span>
				</div>
			</div>
			<div class="portlet-body form">
				<form role="form" class="form-horizontal" action="" method="post">
					<div class="form-body">
						<div class="form-group form-md-line-input">
							<label class="col-md-2 control-label" for="form_control_1">Id de la salle *</label>
							<div class="col-md-10">
								<input type="text" class="form-control" id="form_control_1" placeholder="102H" name="room_id" value="{{ room.id }}" required readonly>
								<div class="form-control-focus"> </div>
							</div>
						</div>

						<div class="form-group form-md-line-input">
							<label class="col-md-2 control-label" for="form_control_1">Nom de la salle *</label>
							<div class="col-md-10">
								<input type="text" class="form-control" id="form_control_1" placeholder="102H" name="room_name" value="{{ room.name }}" required>
								<div class="form-control-focus"> </div>
								<span class="help-block">Ce nom permettra d'identifier la salle dans l'application.</span>
							</div>
						</div>

						<div class="form-group form-md-line-input">
							<label class="col-md-2 control-label" for="form_control_1">Bâtiment *</label>
							<div class="col-md-10">
								<div class="md-radio-inline">
									<div class="md-radio">
										<input type="radio" id="building1" name="room_building" class="md-radiobtn" {{ (room.building == 'batiment_1') ? 'checked' : '' }} value="batiment_1">
										<label for="building1">
											<span></span>
											<span class="check"></span>
											<span class="box"></span>Bâtiment 1</label>
									</div>
									<div class="md-radio">
										<input type="radio" id="building2" name="room_building" class="md-radiobtn" {{ (room.building == 'batiment_2') ? 'checked' : '' }} value="batiment_2">
										<label for="building2">
											<span></span>
											<span class="check"></span>
											<span class="box"></span>Bâtiment 2</label>
									</div>
									<div class="md-radio">
										<input type="radio" id="building3" name="room_building" class="md-radiobtn" {{ (room.building == 'batiment_3') ? 'checked' : '' }} value="batiment_3">
										<label for="building3">
											<span></span>
											<span class="check"></span>
											<span class="box"></span>Bâtiment 3</label>
									</div>
								</div>
							</div>
						</div>
						<div class="form-group form-md-line-input">
							<label class="col-md-2 control-label" for="form_control_1">Étage *</label>
							<div class="col-md-10">
								<div class="md-radio-inline">
									<div class="md-radio">
										<input type="radio" id="rdc" name="room_floor" class="md-radiobtn" {{ (room.floor == 'etage_0') ? 'checked' : '' }} value="etage_0">
										<label for="rdc">
											<span></span>
											<span class="check"></span>
											<span class="box"></span>Rez-de-chaussée</label>
									</div>
									<div class="md-radio">
										<input type="radio" id="rdc" name="room_floor" class="md-radiobtn" {{ (room.floor == 'etage_1') ? 'checked' : '' }} value="etage_1">
										<label for="floor1">
											<span></span>
											<span class="check"></span>
											<span class="box"></span>Étage 1</label>
									</div>
									<div class="md-radio">
										<input type="radio" id="rdc" name="room_floor" class="md-radiobtn" {{ (room.floor == 'etage_2') ? 'checked' : '' }} value="etage_2">
										<label for="floor2">
											<span></span>
											<span class="check"></span>
											<span class="box"></span>Étage 2</label>
									</div>
									<div class="md-radio">
										<input type="radio" id="rdc" name="room_floor" class="md-radiobtn" {{ (room.floor == 'etage_3') ? 'checked' : '' }} value="etage_3">

										<label for="floor3">
											<span></span>
											<span class="check"></span>
											<span class="box"></span>Étage 3</label>
									</div>
								</div>
							</div>
						</div>


						<div id="multipleLockSelectDiv" class="form-group form-md-line-input">
							<label class="col-md-2 control-label" for="form_control_1">Associer une ou plusieurs porte(s) *</label>
							<div class="col-md-10">
								<div class="input-group select2-bootstrap-append">
									<select id="multipleLockSelect" class="form-control select2" name="room_doors[]" multiple required>
										<option></option>
										<option value="none"
											{% if 'none' in room.doors %}
										selected
											{% endif %}>(Aucune)</option>
										{% for door in doors %}
											<option value="{{ door.id }}"
												{% if door.id in room.doors %}
													selected
												{% endif %}
											>{{ door.name }}</option>
										{% endfor %}
									</select>
									<span class="input-group-btn">
										<button class="btn btn-default" type="button" data-select2-open="multi-append">
											<span class="glyphicon glyphicon-search"></span>
										</button>
									</span>
								</div>
							</div>
						</div>

						<div class="form-actions">
							<div class="row">
								<div class="col-md-offset-2 col-md-10">
									<button type="submit" class="btn blue">Modifier la salle</button>
									<button type="button" onclick="location.href='{{ previousUrl }}'" class="btn default">Retour</button>
								</div>
							</div>
						</div>
				</form>
			</div>
		</div>
		<!-- END SAMPLE FORM PORTLET-->
	</div>
</div>
