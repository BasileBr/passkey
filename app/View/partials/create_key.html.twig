<div class="col-md-12">
	<!-- BEGIN SAMPLE FORM PORTLET-->
	<div class="portlet light bordered">
		<div class="portlet-title">
			<div class="caption font-green-haze">
				<i class="icon-settings font-green-haze"></i>
				<span class="caption-subject bold uppercase">Créer une nouvelle clé</span>
			</div>
		</div>
		<div class="portlet-body form">
			<form role="form" class="form-horizontal">
				<div class="form-body">
					<div class="form-group form-md-line-input">
						<label class="col-md-2 control-label" for="form_control_1">Identifiant de la clé</label>
						<div class="col-md-10">
							<input type="text" class="form-control" id="form_control_1" placeholder="K-102H-G-001">
							<div class="form-control-focus"> </div>
							<span class="help-block">Ce nom permettra d'identifier la clé dans l'application.</span>
						</div>
					</div>

					<div class="form-group form-md-line-input">
						<label class="col-md-2 control-label" for="form_control_1">Type de clé</label>
						<div class="col-md-10">
							<div class="md-radio-inline">
								<div class="md-radio">
									<input type="radio" id="simple" name="keyType" class="md-radiobtn" checked="">
									<label for="rdc">
										<span></span>
										<span class="check"></span>
										<span class="box"></span>Clé</label>
								</div>
								<div class="md-radio">
									<input type="radio" id="partial" name="keyType" class="md-radiobtn">
									<label for="floor1">
										<span></span>
										<span class="check"></span>
										<span class="box"></span>Passe partiel</label>
								</div>
								<div class="md-radio">
									<input type="radio" id="total" name="keyType" class="md-radiobtn">
									<label for="floor2">
										<span></span>
										<span class="check"></span>
										<span class="box"></span>Passe Total</label>
								</div>
							</div>
						</div>
					</div>

					<div class="form-group form-md-line-input">
						<label class="col-md-2 control-label" for="form_control_1">Associer un canon</label>
						<div class="col-md-10">
							<select class="form-control" id="form_control_1">
								<option value="none">(Aucune)</option>
								<option value="">Canon 1</option>
								<option value="">Canon 2</option>
								<option value="">Canon 3</option>
								<option value="">Canon 4</option>
							</select>
							<div class="form-control-focus"> </div>
						</div>
					</div>
				</div>
				<div class="form-actions">
					<div class="row">
						<div class="col-md-offset-2 col-md-10">
							<button type="button" class="btn blue">Ajouter un canon</button>
							<button type="button" class="btn default">Annuler</button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
	<!-- END SAMPLE FORM PORTLET-->
</div>
