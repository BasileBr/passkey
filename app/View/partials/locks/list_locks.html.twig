	<div class="row">
		<div class="col-md-12">
			<!-- BEGIN SAMPLE TABLE PORTLET-->
			<div class="portlet box blue">
				<div class="portlet-title">
					<div class="caption">
						<i class="icon-lock"></i> Liste des canons  </div>
					<div class="tools">
						<a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
					</div>
				</div>
				<div class="portlet-body">
					<div class="table">
						<table id="filterTable" class="table table-striped table-bordered table-hover">
							<thead>
							<tr>
								<th> ID </th>
								<th> Nom </th>
								<th> Porte </th>
								<th> Longueur du canon (en mm) </th>
								<th> Actions </th>
							</tr>
							</thead>
							<tbody>
							{% for lock in locks %}
								<tr id="{{ lock.id }}">
									<td> {{ lock.id }} </td>
									<td> {{ lock.name }} </td>

									{% for door in doors %}
										{% if door.id == lock.door %}
											<td> {{ door.name }} </td>
										{% endif %}
									{% endfor %}

									<td> {{ lock.length }} </td>

									<td style="display: flex;">
										<form action="./?action=updatelock" method="post">
											<input type="hidden" name="update" value="{{ lock.id }}"/>
											<button type="submit" class="btn blue btn-sm">Modifier</button>
										</form>

										<!-- <form action="" method="post"> -->
											<input type="hidden" name="delete" value="{{ lock.id }}"/>
											<button type="submit" class="btn red btn-sm btn-delete-l" value="{{ lock.id }}">Supprimer</button>
										<!-- </form> -->
									</td>
								</tr>
							{% endfor %}
							</tbody>
							<tfoot>
								<th> ID </th>
								<th> Nom </th>
								<th> Porte </th>
								<th> Longueur </th>
								<th> Actions </th>
							</tfoot>
						</table>
					</div>
				</div>
			</div>
			<!-- END SAMPLE TABLE PORTLET-->
		</div>
	</div>
