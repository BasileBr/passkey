<div class="row">
	<div class="col-md-12">
		<!-- BEGIN SAMPLE TABLE PORTLET-->
		<div class="portlet box blue">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-users"></i> Liste des utilisateurs  </div>
				<div class="tools">
					<a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
				</div>
			</div>
			<div class="portlet-body">
				<div class="table">
					<table id="borrowingsTable" class="table table-striped table-bordered table-hover">
						<thead>
						<tr>
							<th> ENSSAT ID </th>
							<th> UR1 ID </th>
							<th> Nom d'utilisateur </th>
							<th> Nom </th>
							<th> Prénom </th>
							<th> Statut </th>
							<th> Téléphone </th>
							<th> E-mail </th>
							<th> Actions </th>
						</tr>
						</thead>
						<tbody>
						{% for user in users %}
							<tr id="u_{{ user.enssatPrimaryKey }}">
								<td> {{ user.enssatPrimaryKey }} </td>
								<td> {{ user.ur1identifier }} </td>
								<td> {{ user.username }} </td>
								<td> {{ user.name }} </td>
								<td> {{ user.surname }} </td>
								<td> {{ user.status }} </td>
								<td> {{ user.phone }} </td>
								<td> {{ user.email }} </td>

								<td>
									<form action="./?action=updateUser" method="post">
										<input type="hidden" name="update" value="{{ user.enssatPrimaryKey }}"/>
										<button type="submit" class="btn blue btn-sm">Modifier</button>
									</form>

									<!--<form action="" method="post">-->
									<input type="hidden" name="delete" value="{{ user.enssatPrimaryKey }}"/>
									<button type="submit" class="btn red btn-sm btn-delete-u" value="{{ user.enssatPrimaryKey }}">Supprimer</button>
									<!--</form>-->
								</td>
							</tr>
						{% endfor %}
						</tbody>
						<tfoot>
								<th> ENSSAT ID </th>
								<th> UR1 ID </th>
								<th> Utilisateur </th>
								<th> Nom </th>
								<th> Prénom </th>
								<th> Statut </th>
								<th> Téléphone </th>
								<th> E-mail </th>
								<th> Actions </th>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
		<!-- END SAMPLE TABLE PORTLET-->
	</div>
</div>
