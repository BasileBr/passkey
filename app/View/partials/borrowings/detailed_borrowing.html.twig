<div class="profile">
	<div class="tabbable-line tabbable-full-width">
		<div class="tab-content">
			<div class="tab-pane active" id="tab_1_1">
				<div class="row">
					<div class="col-md-12">
						<div class="row">
							<div class="col-md-12 profile-info">
								<h1 class="font-green sbold uppercase">Emprunt n°{{ borrow.id }} </h1>
								<p> Cette fiche détaille les paramètres d'un emprunt. </p>
								<ul class="list-inline">
									<li>
										<i class="fa fa-forward"></i> {{ borrowDate }}
									</li>
									<li>
										<i class="fa fa-backward"></i> {{ dueDate }}
									</li>
									<li>
										<i class="fa fa-user"></i> {{ user.surname ~ " " ~ user.name }}
									</li>
								</ul>
								<p>L'état de l'emprunt est : <strong>{{ status }}</strong>.</p>
							</div>
							<div class="col-md-6 clearfix">
								<div class="panel panel-info">
									<!-- Default panel contents -->
									<div class="panel-heading">
										<h3 class="panel-title">Clés du trousseau</h3>
									</div>
									<!-- List group -->
									<ul class="list-group">
										{% for key in keys %}
											<li class="list-group-item">
												{{ key.name ~ " (" ~ key.id ~ ")" }}
											</li>
										{% endfor %}
									</ul>
								</div>
							</div>
							<div class="col-md-6 clearfix">
								<div class="panel panel-info">
									<!-- Default panel contents -->
									<div class="panel-heading">
										<h3 class="panel-title">Portes ouvertes</h3>
									</div>
									<!-- List group -->
									<ul class="list-group">
										{% for room in rooms %}
											<li class="list-group-item">
												{{ room.name ~ " (" ~ room.id ~ ")" }}
											</li>
										{% endfor %}
									</ul>
								</div>
							</div>
						</div>

						<!--end row-->
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
